{{ form_start(form) }}
<div>
    {{ form_widget(form._token) }}
    {%- for child in form %}
        {% if child.rendered is same as (false) %}
            <div class="form-group row">
                {{ form_label(child, null , {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}

                <div class="col-sm-5">
                    {{ form_widget(child, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
            </div>
        {% endif %}
    {% endfor %}
    {{ form_widget(form) }}
</div>
<button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
