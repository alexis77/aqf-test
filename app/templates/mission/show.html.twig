{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>ServiceDate</th>
                <td>{{ mission.serviceDate ? mission.serviceDate.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>ProductName</th>
                <td>{{ mission.productName }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ mission.quantity }}</td>
            </tr>
            <tr>
                <th>DestinationCountry</th>
                <td>{{ mission.destinationCountry }}</td>
            </tr>
            <tr>
                <th>VendorName</th>
                <td>{{ mission.vendorName }}</td>
            </tr>
            <tr>
                <th>VendorEmail</th>
                <td>{{ mission.vendorEmail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mission_list') }}">back to list</a>

    <a href="{{ path('mission_update', {'id': mission.id}) }}">edit</a>

    {{ include('mission/_delete_form.html.twig') }}
{% endblock %}
